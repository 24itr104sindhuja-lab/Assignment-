import javafx.application.Application;
import javafx.scene.Scene;
import javafx.scene.control.*;
import javafx.scene.layout.BorderPane;
import javafx.stage.Stage;

public class SimpleTextEditor extends Application {
    @Override
    public void start(Stage stage) {
        TextArea textArea = new TextArea();

        Menu fileMenu = new Menu("File");
        MenuItem newFile = new MenuItem("New");
        MenuItem openFile = new MenuItem("Open");
        MenuItem saveFile = new MenuItem("Save");
        MenuItem exit = new MenuItem("Exit");
        fileMenu.getItems().addAll(newFile, openFile, saveFile, new SeparatorMenuItem(), exit);

        Menu editMenu = new Menu("Edit");
        Menu helpMenu = new Menu("Help");

        MenuBar menuBar = new MenuBar(fileMenu, editMenu, helpMenu);

        exit.setOnAction(e -> stage.close());

        BorderPane root = new BorderPane();
        root.setTop(menuBar);
        root.setCenter(textArea);

        Scene scene = new Scene(root, 500, 400);
        stage.setTitle("Simple Text Editor");
        stage.setScene(scene);
        stage.show();
    }

    public static void main(String[] args) {
        launch(args);
    }
}
