class TicketBooking {
    private int tickets = 1;

    public synchronized void bookTicket(String name) {
        if (tickets > 0) {
            System.out.println(name + " booked the ticket.");
            tickets--;
        } else {
            System.out.println("Sorry, " + name + ". Ticket not available.");
        }
    }
}

public class BookingTest {
    public static void main(String[] args) {
        TicketBooking booking = new TicketBooking();

        Thread t1 = new Thread(() -> booking.bookTicket("Customer 1"));
        Thread t2 = new Thread(() -> booking.bookTicket("Customer 2"));

        t1.start();
        t2.start();
    }
}
