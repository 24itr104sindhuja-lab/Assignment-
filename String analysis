public class SentenceAnalysis {
    public static void main(String[] args) {
        String sentence = "Java Programming is FUN and Powerful";

      
        System.out.println("Character count: " + sentence.length());

    
        String lower = sentence.toLowerCase();
        System.out.println("Lowercase: " + lower);

        
        String replaced = lower.replace(' ', '_');
        System.out.println("Replaced: " + replaced);

      
        System.out.println("Contains 'java'? " + lower.contains("java"));

        
        int start = sentence.indexOf("FUN");
        if (start != -1) {
            String funLower = sentence.substring(start, start + 3).toLowerCase();
            System.out.println("FUN in lowercase: " + funLower);
        }
    }
}
